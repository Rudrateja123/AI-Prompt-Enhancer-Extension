{
    "manifest_version": 3,
    "name": "My Personal Prompt Enhancer",
    "version": "1.0",
    "description": "Transforms my selected text into a high-quality prompt with a shortcut.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "enhance-prompt": {
            "suggested_key": {
                "default": "Alt+P"
            },
            "description": "Enhance the selected text"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ]
}